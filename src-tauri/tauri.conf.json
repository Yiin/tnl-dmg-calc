{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TNL Damage Calculator",
  "version": "1.0.0",
  "identifier": "com.tnl.calculator",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "TNL Damage Calculator",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage", "nsis"],
    "publisher": "TNL Calculator",
    "category": "Utility",
    "shortDescription": "Throne & Liberty Damage Calculator",
    "longDescription": "A comprehensive damage calculator for Throne & Liberty MMO with build comparison and interactive charts",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
